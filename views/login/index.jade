extends ../layout

block content
  div(class="span8")
    legend
      h3= locale.header
    include ../flashify
    form(action="/login", method="post")
      input(type="text",name="username",value="administrator",placeholder="#{locale.username}")
      br
      input(type="password",name="password",value="password",placeholder="#{locale.password}")
      br
      input(type="submit",name="cmdLogin",value="#{locale.button}",class="btn btn-primary")